.spinning {
  animation: spinAnimation 1s linear infinite;
}

/* Active Filters Display Styles */
.active-filters-container {
  display: flex;
  align-items: center;
  gap: 10px;
  flex-wrap: wrap;
}

.filter-badge {
  display: inline-flex;
  align-items: center;
  padding: 4px 8px;
  border-radius: 16px;
  font-size: 12px;
  font-weight: 500;
  color: var(--filter-badge-text-light); /* Light theme filter badge text */
  background-color: var(--filter-badge-bg-light); /* Light theme filter badge background */
  border: 1px solid var(--filter-badge-border-light); /* Light theme filter badge border */
  white-space: nowrap;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.filter-badge span {
  margin-right: 6px;
}

.clear-filter-btn {
  background: none;
  border: none;
  color: var(--filter-badge-text-light); /* Light theme filter badge text */
  cursor: pointer;
  font-size: 14px;
  line-height: 1;
  padding: 0;
  margin-left: 4px;
  transition: color 0.2s ease, background-color 0.2s ease;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-filter-btn:hover {
  color: var(--text-dark); /* Dark text */
  background-color: var(--filter-badge-clear-hover-light); /* Light theme filter badge clear hover */
}

.clear-all-filters-btn {
  background: var(--clear-all-btn-bg-light); /* Light theme clear all button background */
  border: 1px solid var(--clear-all-btn-border-light); /* Light theme clear all button border */
  border-radius: 4px;
  color: var(--clear-all-btn-text-light); /* Light theme clear all button text */
  padding: 6px 12px;
  font-size: 12px;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s ease, border-color 0.2s ease;
  white-space: nowrap;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.clear-all-filters-btn:hover {
  background: var(--clear-all-btn-hover-bg-light); /* Light theme clear all button hover */
  border-color: var(--text-muted-light); /* Light theme muted text */
}

/* Error Message */
.errorMessage {
  display: flex;
  align-items: center;
  gap: 8px;
  background: rgba(220, 53, 69, 0.08); /* Light red background */
  border-left: 3px solid var(--danger-color-light); /* Light theme danger color */
  border-radius: 4px;
  padding: 4px 8px;
  margin: 0 0 24px 0;
  color: var(--danger-color-light); /* Light theme danger color */
  flex-shrink: 0;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

/* Dashboard Charts */
.dashboardCharts {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  margin: 12px;
  margin-bottom: 8px;
  flex-shrink: 0;
}

/* Dashboard Card */
.dashboardCard {
  background: var(--bg-gradient-1-light); /* Light theme background gradient */
  border-radius: var(--border-radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-md-light); /* Light theme shadow */
  border: 1px solid var(--border-subtle-light); /* Light theme border */
  transition: var(--transition-normal);
  position: relative;
  display: flex;
  flex-direction: column;
}

.dashboardCard:hover {
  box-shadow: var(--shadow-lg-light), 0 0 15px rgba(0, 123, 255, 0.05); /* Lighter shadow and glow */
  border-color: var(--border-accent-light); /* Light theme border accent */
}

.dashboardCard::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--border-radius-md);
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.05); /* Lighter inner shadow */
  pointer-events: none;
}

.dashboardCardBody {
  padding: 4px;
  min-height: 220px;
  height: auto;
  max-height: calc(100% - 16px);
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  overflow: hidden;
}

.chartLoading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--text-muted-light); /* Light theme muted text */
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.loadingSpinner {
  border: 4px solid rgba(51, 51, 51, 0.1); /* Lighter spinner border */
  border-top: 4px solid var(--blue-accent-light); /* Light theme blue accent */
  border-radius: 50%;
  width: 40px;
  height: 40px;
  animation: spinAnimation 1s linear infinite;
  margin-bottom: 10px;
}

/* Vessel Table Wrapper */
.vesselTableWrapper {
  flex: 1;
  min-height: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin: 0 12px 12px 12px;
  width: calc(100% - 12px) !important;
  max-width: 100% !important;
  align-self: center;
}

/* Loading container */
.loadingContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 150px;
  color: var(--text-muted-light); /* Light theme muted text */
  font-size: 12px;
  padding-bottom: 90px;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

/* No results message */
.noResults {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.7), rgba(247, 250, 253, 0.9)); /* Lighter background gradient */
  border-radius: var(--border-radius-md);
  padding: 16px;
  text-align: center;
  color: var(--text-muted-light); /* Light theme muted text */
  box-shadow: var(--shadow-inner-light); /* Light theme inner shadow */
  border: 1px solid var(--border-subtle-light); /* Light theme border */
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.resetFilters {
  margin-top: 12px;
  padding: 6px 14px;
  background: linear-gradient(to bottom, rgba(0, 123, 255, 0.1), rgba(0, 123, 255, 0.08)); /* Lighter blue gradient */
  border: 1px solid rgba(0, 123, 255, 0.15); /* Lighter blue border */
  border-radius: var(--border-radius-sm);
  color: var(--primary-accent-light-theme); /* Light theme primary accent */
  cursor: pointer;
  transition: var(--transition-fast);
  font-weight: 500;
  font-size: 11px;
  box-shadow: var(--shadow-sm-light); /* Light theme shadow */
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.resetFilters:hover {
  background: linear-gradient(to bottom, rgba(0, 123, 255, 0.12), rgba(0, 123, 255, 0.1)); /* Slightly darker light blue gradient */
  transform: translateY(-1px);
  box-shadow: var(--shadow-md-light), 0 0 10px rgba(0, 123, 255, 0.1); /* Lighter shadow and glow */
}

.resetFilters:active {
  transform: translateY(0);
  box-shadow: var(--shadow-sm-light); /* Light theme shadow */
}

/* Table Container */
.tableContainer {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.tableHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4px;
  border-bottom: 1px solid var(--border-subtle-light); /* Light theme border */
  flex-wrap: wrap;
  gap: 10px;
  flex-shrink: 0;
}

.tableTitle {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-dark); /* Dark text */
  margin: 0;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.tableActions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

/* Responsive Table Container */
.responsiveTableContainer {
  height: calc(100vh - 350px);
  overflow-y: auto;
  overflow-x: auto;
  scrollbar-width: thin;
  scrollbar-color: rgba(0, 123, 255, 0.15) rgba(255, 255, 255, 0.5); /* Lighter scrollbar */
  padding: 0;
  position: relative;
  scroll-behavior: smooth;
}

.responsiveTableContainer::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

.responsiveTableContainer::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.5); /* Lighter scrollbar track */
  border-radius: 3px;
}

.responsiveTableContainer::-webkit-scrollbar-thumb {
  background-color: rgba(0, 123, 255, 0.2); /* Lighter scrollbar */
  border-radius: 3px;
  transition: background-color 0.2s ease;
}

.responsiveTableContainer::-webkit-scrollbar-thumb:hover {
  background-color: rgba(0, 123, 255, 0.3); /* Lighter scrollbar on hover */
}

/* Enhanced table wrapper */
.defectTableWrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

/* Data Table */
.dataTable {
  width: 100%;
  border-collapse: collapse;
  color: var(--text-dark); /* Dark text */
  font-size: 13px;
  table-layout: auto;
  min-width: 800px;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.dataTable th {
  background: var(--table-header-bg-light); /* Light theme table header background */
  color: var(--text-dark); /* Dark text */
  font-weight: 600;
  text-align: left;
  padding: 4px 8px;
  border-bottom: 1px solid var(--table-border-color-light); /* Light theme table border */
  position: sticky;
  top: 0;
  z-index: 10;
  cursor: pointer;
  white-space: nowrap;
  transition: background-color 0.2s ease;
}

.dataTable th:hover {
  background: var(--secondary-light); /* Light theme secondary background */
}

.dataTable tbody tr {
  background-color: var(--table-row-bg-light); /* Light theme table row background */
  transition: all 0.2s ease;
}

.dataTable tbody tr:nth-child(even) {
  background-color: var(--table-row-alt-bg-light); /* Light theme table row alt background */
}

.dataTable tbody tr:hover {
  background-color: var(--table-row-hover-bg-light); /* Light theme table row hover background */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); /* Lighter shadow */
}

.dataTable td {
  padding: 4px 8px;
  border-bottom: 1px solid var(--table-border-color-light); /* Light theme table border */
  vertical-align: middle;
}

.descriptionCell {
  max-width: 250px;
}

.truncateText {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.statusBadge {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 500;
  text-align: center;
  min-width: 70px;
  font-family: 'Nunito', sans-serif; /* Ensure Nunito font */
}

.statusRed {
  background-color: rgba(220, 53, 69, 0.1); /* Light red background */
  color: var(--status-red-light); /* Light theme status red */
  border: 1px solid rgba(220, 53, 69, 0.15); /* Lighter red border */
}

.statusYellow {
  background-color: rgba(255, 193, 7, 0.1); /* Light yellow background */
  color: var(--status-yellow-light); /* Light theme status yellow */
  border: 1px solid rgba(255, 193, 7, 0.15); /* Lighter yellow border */
}

.statusGreen {
  background-color: rgba(40, 167, 69, 0.1); /* Light green background */
  color: var(--status-green-light); /* Light theme status green */
  border: 1px solid rgba(40, 167, 69, 0.15); /* Lighter green border */
}

.statusGrey {
  background-color: rgba(108, 117, 125, 0.1); /* Light grey background */
  color: var(--status-grey-light); /* Light theme status grey */
  border: 1px solid rgba(108, 117, 125, 0.15); /* Lighter grey border */
}

.actionsColumn {
  width: 120px;
  text-align: center;
}

.actionsCell {
  display: flex;
  justify-content: center;
  gap: 8px;
}

.actionIcon {
  background: none;
  border: none;
  color: var(--text-muted-light); /* Light theme muted text */
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.actionIcon:hover {
  color: var(--blue-accent-light); /* Light theme blue accent */
  background-color: rgba(0, 123, 255, 0.08); /* Light blue hover */
}

/* Media Queries for responsiveness */
@media (max-width: 992px) {
  .filterBar {
    flex-direction: column;
    align-items: stretch;
    gap: 12px;
    padding: 4px 8px;
  }
  .filterSectionLeft {
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    gap: 10px;
  }
  .searchContainer {
    width: 100%;
  }
  .searchInput {
    width: 100%;
  }
  .filterLabel {
    margin-right: 0;
    margin-bottom: 8px;
  }
  .filterChips {
    flex-direction: column;
    align-items: stretch;
    width: 100%;
  }
  .filterDropdownContainer {
    width: 100%;
  }
  .filterDropdownButton {
    width: 100%;
  }
  .filterDropdownContent {
    width: 100%;
    max-width: none;
    left: 0;
    right: 0;
  }
  .filterSectionRight {
    margin-left: 0;
    width: 100%;
    justify-content: flex-end;
  }
}

@media (max-width: 768px) {
  .dashboardTitle {
    font-size: 1.4rem;
  }
  .dashboardCharts {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 576px) {
  .filterBar {
    padding: 4px;
  }
  .filterSectionLeft {
    align-items: center;
  }
  .dashboardTitle {
    font-size: 1.2rem;
  }
  .filterSectionRight {
    justify-content: center;
  }
  .actionButton {
    font-size: 12px;
    padding: 6px 10px;
  }
}

/* Enhanced Generate Report Button Styles */
.expandedFieldAction {
  position: absolute;
  top: 16px;
  right: 16px;
  z-index: 20;
  width: 140px;
  height: 40px;
  padding: 0;
  background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%); /* Keeping original gradient for now */
  border: none;
  border-radius: 20px;
  color: white;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;

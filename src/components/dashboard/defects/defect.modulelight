}

.errorContainer p {
  margin: 4px 0;
  color: rgba(220, 53, 69, 0.8); /* Muted red text */
}

/* Read-Only Form States */
.formInput:read-only,
.formTextarea:read-only,
.formSelect:disabled {
  background: rgba(108, 117, 125, 0.08) !important; /* Light grey background */
  border-color: rgba(108, 117, 125, 0.15) !important; /* Lighter grey border */
  color: rgba(108, 117, 125, 0.8) !important; /* Muted grey text */
  cursor: not-allowed;
}

/* Read-Only Form Field Labels */
.formGroup:has(.formInput:read-only) .formLabel::after,
.formGroup:has(.formTextarea:read-only) .formLabel::after,
.formGroup:has(.formSelect:disabled) .formLabel::after {

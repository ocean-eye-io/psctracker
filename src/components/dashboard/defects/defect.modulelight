/* Base Variables */
.root {
  /* Colors */
  --primary-light: #f0f2f5; /* Light primary background */
  --secondary-light: #ffffff; /* White secondary background */
  --card-bg-light: #ffffff; /* White card background */
  --card-dark-light: #f7fafd; /* Slightly off-white card background */
  --blue-accent-light: #007bff; /* Standard blue accent */
  --secondary-accent-light: #0056b3; /* Darker blue accent */
  --text-dark: #333333; /* Dark text */
  --text-muted-light: rgba(51, 51, 51, 0.6); /* Muted dark text */
  --border-subtle-light: rgba(0, 0, 0, 0.08); /* Subtle light border */
  --warning-color-light: #ffc107; /* Standard warning yellow */
  --success-color-light: #28a745; /* Standard success green */
  --danger-color-light: #dc3545; /* Standard danger red */
  --negative-color-light: #dc3545; /* Standard negative red */
  --positive-color-light: #28a745; /* Standard positive green */

  /* Enhanced Badge Colors */
  --status-open-bg-light: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%); /* Bright red */
  --status-closed-bg-light: linear-gradient(135deg, #51cf66 0%, #40c057 100%); /* Bright green */
  --status-progress-bg-light: linear-gradient(135deg, #ffd43b 0%, #fab005 100%); /* Bright yellow */
  --criticality-high-bg-light: linear-gradient(135deg, #ff4757 0%, #ff3838 100%); /* Bright red */
  --criticality-medium-bg-light: linear-gradient(135deg, #ffa726 0%, #ff9800 100%); /* Bright orange */
  --criticality-low-bg-light: linear-gradient(135deg, #42a5f5 0%, #2196f3 100%); /* Bright blue */

  /* Button Gradients */
  --button-primary-bg-light: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%); /* Blue gradient */
  --button-primary-hover-light: linear-gradient(135deg, #00e5ff 0%, #4a90e2 100%); /* Lighter blue gradient on hover */

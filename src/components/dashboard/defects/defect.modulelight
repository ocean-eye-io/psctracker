}

.permissionStatus.readonly {
  background: rgba(0, 123, 255, 0.08); /* Light blue background */
  color: #007bff; /* Standard blue */
}

.permissionStatus.full {
  background: rgba(40, 167, 69, 0.08); /* Light green background */

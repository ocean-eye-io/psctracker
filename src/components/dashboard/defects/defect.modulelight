    inset 0 1px 0 rgba(255, 255, 255, 0.5), /* Lighter inner shadow */
    inset 0 -1px 0 rgba(0, 0, 0, 0.05); /* Lighter inner shadow */
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);

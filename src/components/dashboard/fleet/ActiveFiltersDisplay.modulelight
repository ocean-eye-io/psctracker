  border-radius: 4px !important;
  padding: 6px 12px !important;
  color: #dc3545 !important; /* Standard red */
  font-size: 12px !important;
  font-weight: 500 !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  white-space: nowrap !important;
  flex-shrink: 0 !important;
  min-height: 32px !important;
  margin: 0 !important;
  outline: none !important;
  font-family: 'Nunito', sans-serif !important; /* Ensure Nunito font */
}

div.dashboard-container button.af-clear-all-btn:hover,
.dashboard-container .af-clear-all-btn:hover,
button.af-clear-all-btn.af-clear-all-btn.af-clear-all-btn:hover {
  background: rgba(220, 53, 69, 0.12) !important; /* Slightly darker light red background on hover */
  transform: translateY(-1px) !important;
}

div.dashboard-container .af-clear-text,
.dashboard-container .af-clear-text,
.af-clear-text.af-clear-text.af-clear-text {
  display: none !important;
}

div.dashboard-container .af-clear-text-full,
.dashboard-container .af-clear-text-full,
.af-clear-text-full.af-clear-text-full.af-clear-text-full {
  display: inline !important;

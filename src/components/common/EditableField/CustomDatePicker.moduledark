/* src/components/common/EditableField/CustomDatePicker.module.css */

/* Custom Date Picker Styles */
.container {
    display: flex;
    align-items: center;
    gap: 2px;
    flex-grow: 1;
    background: rgba(26, 42, 58, 0.85);
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: 2.5px 4px;
    border: 1px solid rgba(77, 195, 255, 0.25);
  }

  .inputContainer {
    flex-grow: 1;
    position: relative;
  }

  .input {
    background: rgba(40, 60, 90, 0.7);
    border-radius: 8px;
    color: #F0F0F0;
    border: none;
    outline: none;
    padding: 2px 3px;
    font-size: 11.5px;
    width: 120px;
    min-width: 0;
    max-width: 180px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.10);
    transition: background 0.2s;
  }

  .input:focus {
    background: rgba(50, 80, 120, 0.95);
  }

  /* Hide the default calendar icon but keep the input clickable */
  .input::-webkit-calendar-picker-indicator {
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    position: absolute;
    top: 0;
    left: 0;
  }

  /* For Firefox */
  .input {
    -moz-appearance: none;
    appearance: none;
  }

  .input::-moz-calendar-picker-indicator {
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    position: absolute;
    top: 0;
    left: 0;
  }

  .confirmBtn {
    background: rgba(46, 224, 134, 0.15);
    border: 1px solid rgba(46, 224, 134, 0.3);
    color: #2EE086;
    cursor: pointer;
    padding: 3px;
    border-radius: 8px;
    transition: all 0.2s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11.5px;
  }

  .confirmBtn:hover {
    background-color: rgba(46, 224, 134, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(46, 224, 134, 0.2);
  }